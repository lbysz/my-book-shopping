.content {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: row;
}
.left {
  width: 200rpx;
  flex-shrink: 0;
  border-right: 1rpx solid #ccc;
}
.right {
  width: 550rpx;
  flex-grow: 1;
}

.category-item {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.category-item-active {
  background-color: #d81e06;
}

.goodsWrap-category {
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  /* border-bottom: 1rpx solid #d81e06; */
}

.goods-item {
  width: 100%;
  display: flex;
  padding: 5px;
  flex-direction: row;
  margin-left: 2rpx;
  align-items: center;
  justify-content: flex-start;
  /* border-bottom: 1rpx solid #d81e06; */
}

.goods-pic {
  width: 80px;
  height: 80px;
  flex-shrink: 0;
}

.goods-info {
  display: flex;
  flex-direction: column;
  padding: 0px 5px 0px 5px;
  height: 80px;
}
.goodsName {
  font-size: 28rpx;
}
.goodsPrice {
  color:#e64340;
}
